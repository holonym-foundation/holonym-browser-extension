{
  "manifest_version": 3,
  "name": "Holonym",
  "description": "View Holos by hovering over Twitter handles.",
  "version": "1.0.0",
  "browser_action": {
    "default_title": "Holonym",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["file:///*", "http://*/*", "https://*/*"],
      "js": ["content/HoloHoverCard.js", "content/HoloStorePopup.js", "content/HoloStore.js", "content/content_script.js"],
      "css": ["content/HoverCard.css", "content/holo-wtf.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "externally_connectable": {
    "matches": ["http://*/*", "https://*/*"]
  }
}
