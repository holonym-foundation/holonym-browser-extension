{
  "manifest_version": 3,
  "name": "Holonym",
  "description": "View Holos by hovering over Twitter handles.",
  "version": "1.0.0",
  "action": {
    "default_title": "Holonym",
    "default_popup": "default_popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["file:///*", "http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["./HoverCard.css", "./holo-wtf.css", "./HoloStorePopup.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "tabs"],
  "externally_connectable": {
    "matches": ["http://localhost:3002/*", "https://app.holonym.id/*"]
  }
}
